.nested-fields
	.row
		.col-md-3.form-item
			=f.input :name, class:"form-control",label: false, placeholder:"Item name & description"
		.col-md-2.form-item
			=f.input :qty, class:"form-control", label: false, placeholder: "Quantity"
		.col-md-3.form-item
			=f.input :rate, class:"form-control", label: false, placeholder: "Rate / Price"
		.col-md-3.form-item
			=f.input :amount, class:"form-control", label: false, placeholder:"Amount"
		.col-md-1.text-right
			=link_to_remove_association 'Remove', f, class:"btn btn-danger"