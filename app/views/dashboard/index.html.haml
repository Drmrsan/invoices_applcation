#wrapper
	#page-wrapper
		.col-lg-12
			-if current_user.first_name.blank?
				=link_to "Add your details", edit_user_registration_path, class:"btn btn-primary"
			.panel.panel-default
				.panel-heading
					%h2.clients-heading Invoices
				.panel-body
					=area_chart @clients.map{|client| {name: client.company_name, data: client.invoices.group_by_day_of_week(:created_at, format:"%A", week_start: :mon).maximum(:total)}}, legend: false
		
			.panel.panel-default
				.panel-heading
					%h2.clients-heading Latest invoices for #{Date.today.strftime("%B, %Y")}
				.panel-body
					-@clients.each do |client|
						-if client.invoices.count > 0
							.col-md-3
								%h5 #{client.company_name} for #{Date.today.strftime("%B, %Y")}
								=pie_chart client.invoices.group_by_day(:created_at).sum(:total), donut: true

